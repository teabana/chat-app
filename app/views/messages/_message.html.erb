<div class="messages">
  <div class="messages_head">
    <div class="messages_name">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>
    </div>
    <div class="messages_date">
      <!-- 投稿した日付情報を出力する -->
      <%= l message.created_at %>
    </div>
  </div>
  <div class="messages_text">
    <!-- 投稿した内容情報を出力する -->
    <%= message.content %>
  </div>
  <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %>
</div>