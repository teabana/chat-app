<div class="main_view">
  <div class="main_view__head">
    <div class="room_icon">
      <a href="#">hogefuge</a>
    </div>
    <div class="chat_finish_icon">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
  <div class="main_view__messages">
    <div class="messages">
      <div class="messages_head">
        <div class="messages_name">
          Tom
        </div>
        <div class="messages_date">
          2020/3/31(Wed) 12:45:30
        </div>
      </div>
      <div class="messages_text">
        おはよう
      </div>
    </div>
    <div class="messages">
      <div class="messages_head">
        <div class="messages_name">
        Brad
        </div>
        <div class="messages_date">
          2022/3/40(Wed) 45:45:30
        </div>
      </div>
      <div class="messages_text">
        おはようマンモス
      </div>
    </div>
  </div>
  <div class="form">
    <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
    <div class="form-input">
      <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
    </div>
      <%= f.submit '送信', class: 'form-submit' %>
    <% end %>
  </div>
</div>